int n;
vi dist;
vector<vector<int>> adj;

void bfs(vi source){
    vector<int> vis(n+1,0);
    dist.assign(n+1,0);
    queue<int> q;
    for(auto s:source){
        vis[s] = 1;
        q.push(s);
        dist[s] = 0;
    }
    while(!q.empty()){
        int node = q.front();
        q.pop();
        for(auto child: adj[node]){
            if(vis[child]) continue;
            vis[child] = 1;
            dist[child] = 1 + dist[node];
            q.push(child);
        }
    }
}
