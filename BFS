int n;
vi lvl;
vector<vector<int>> adj;

void bfs(int source){
    vector<int> vis(n+1,0);
    lvl.assign(n+1,0);
    queue<int> q;
    vis[source] = 1;
    lvl[source] = 0;
    q.push(source);
    while(!q.empty()){
        int node = q.front();
        q.pop();
        for(auto child: adj[node]){
            if(vis[child]) continue;
            vis[child] = 1;
            lvl[child] = 1 + lvl[node];
            q.push(child);
        }
    }
}
