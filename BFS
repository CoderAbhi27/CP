int n;
vi dist;
vector<vector<int>> adj;

void bfs(int source){
    vector<int> vis(n+1,0);
    dist.assign(n+1,0);
    queue<int> q;
    vis[source] = 1;
    dist[source] = 0;
    q.push(source);
    while(!q.empty()){
        int node = q.front();
        q.pop();
        for(auto child: adj[node]){
            if(vis[child]) continue;
            vis[child] = 1;
            dist[child] = 1 + dist[node];
            q.push(child);
        }
    }
}
