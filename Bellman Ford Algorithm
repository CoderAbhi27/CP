//dp[i] = shortest distance to node i
//dp[i] = INFINITY for all i
dp[s]=0; 
for(int i=1; i<=n-1; i++)
{
     for(auto e: edges) //traversing through all the edges
     {
		int u=e.first;
      	int v=e.second.first;
      	int w=e.second.second;
      	if(dp[u]+w <dp[v])
        {    // relaxation
             dp[v]=dp[u]+w;
        }
     }
}
